!!! Strict

%html{ :xmlns => "http://www.w3.org/1999/xhtml", "xml:lang" => "en-us", :lang => "en-us" }
  %head
    %title keypressr: type your way to the top
    %meta{ "http-equiv" => "content-type", :content => "text/html; charset=utf-8" }
    = css_include_tag "master"
    - require_js "application.js"
    = include_required_js
      
  %body
    #container
      #logo
        = link_to image_tag("/images/keypressr_logo.gif", :alt => "keypressr: type your way to the top"), url(:home)
      #nav
        %ul
          - if @current_user
            %li
              = link_to "Logout", url(:logout)
            - if @current_user.admin?
              %li 
                = link_to "Texts", url(:texts)
              %li 
                = link_to "Languages", url(:languages)
          - else
            %li
              = link_to "Login", url(:login)
          %li
            = link_to "Records", url(:records)
          %li
            = link_to "About", url(:about)
      .clear

      = partial 'shared/messages'
      = catch_content :for_layout

    #footer
      %p
        %strong
          Choose language:<br />
        = partial 'shared/languages'
      %p
        keypressr. a typing trainer for coders.
        site by 
        = link_to "trptcolin", "http://trptcolin.github.com"
