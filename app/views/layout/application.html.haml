!!! Strict

%html{ :xmlns => "http://www.w3.org/1999/xhtml", "xml:lang" => "en-us", :lang => "en-us" }
  %head
    %title keypressr.com
    %meta{ "http-equiv" => "content-type", :content => "text/html; charset=utf-8" }
    = css_include_tag "master"
    - require_js "application.js"
    = include_required_js
      
  %body
    #container
      #logo
        = link_to image_tag("/images/keypressr_logo.gif", :alt => "keypressr: type your way to the top"), "/"
      #nav
        %ul
          %li.last
            = link_to "About", "/main/about"   
          - if session[:user]
            %li
              = link_to "Logout", url(:logout)
            %li 
              = link_to "Texts", url(:texts)
          %li 
            = link_to "Languages", url(:languages)
      .clear

      = partial 'shared/messages'
      = catch_content :for_layout

    #footer
      %p
        %strong
          Choose language:<br /> 
        = partial 'shared/languages'
