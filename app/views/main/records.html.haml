%h1 
  Best Keypressrs
.records
  %h1 Quickest Completion
  %table
    %tr
      %th Ranking
      %th User
      %th Time (seconds)
    - @shortest_times.each_with_index do |time, i|
      %tr
        %td
          = i + 1
        %td
          = time.user_name
        %td
          = time.rounded_duration
.records
  %h1 Fastest per Character 
  %table
    %tr
      %th Ranking
      %th User
      %th Speed (chars/sec)
    - @fastest_times.each_with_index do |time, i|
      %tr
        %td
          = i + 1
        %td
          = time.user_name
        %td
          = time.rounded_speed

.clear
